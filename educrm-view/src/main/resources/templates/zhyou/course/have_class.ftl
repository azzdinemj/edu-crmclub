        //changevideo('http://p.bokecc.com/player?vid=5491E1E6BAE9E2099C33DC5901307461&siteid=B21C8E6C9A6E7CD1&autoStart=1&width=100%&height=100%&playerid=AC72CAC51B506ACE&playertype=1');

    });


    //点击节 params:  视频url  类型   章节主键  课程主键  章节名称
    function playCourse (url,type,pkCL,pkC,caption) {

        $(".j-lessonname").html(caption);
        $(".j-lessonname").attr("data-lessname",pkCL);
        //$.get("/course/queryclass?pkCourseLesson="+pkCL+"&&pkCourse="+pkC);
       $(".learn-box").html("");
       if(type==0){
           changevideo('http://p.bokecc.com/player?vid='+url+'&siteid=B21C8E6C9A6E7CD1&autoStart=1&width=100%&height=100%&playerid=AC72CAC51B506ACE&playertype=1');
       }

       if(type==1){
           //new PDFObject({ url:url+".pdf" }).embed("learn-box");
           if(url.indexOf(".pdf") == -1) {
               PDFObject.embed(url + ".pdf", "#learn-box")
           }else{
               PDFObject.embed(url, "#learn-box")
           }
       }

    }


    function s2j_onPlayOver(){
        var lid=$("#plid").val();
        SetStatusClick(lid,2);
        $("#j-next").click();
    }


    //上一节
    $("#j-prevC").click(function(){
        var  playpk=$(".j-lessonname").attr("data-lessname");
        var  arr=$("div.section");
        $.each(arr, function(i){
            var index=$(this).attr("data-pkcl");
            if(index==playpk){
                var old = i-1;
                if($(arr[old]).attr("data-pkcl")==null){
                    //alert($(arr[old+1]).attr("data-pkcl"));//获得第一条数据
                    var url=$(arr[old+1]).attr("data-url");
                    var type=$(arr[old+1]).attr("data-type");
                    var plcl=$(arr[old+1]).attr("data-pkcl");
                    var pkcourse=$(arr[old+1]).attr("data-pkCourse");
                    var caption=$(arr[old+1]).attr("data-caption");
                    playCourse(url,type,plcl,pkcourse,caption);
                }else{
                    var url=$(arr[old]).attr("data-url");
                    var type=$(arr[old]).attr("data-type");
                    var plcl=$(arr[old]).attr("data-pkcl");
                    var pkcourse=$(arr[old]).attr("data-pkCourse");
                    var caption=$(arr[old]).attr("data-caption");
                    playCourse(url,type,plcl,pkcourse,caption);
                    //alert($(arr[old]).attr("data-pkcl"));//获得当前索引的上一条数据
                }
            }
        })
    });


    //下一节
    $("#j-nextC").click(function(){
        var  playpk=$(".j-lessonname").attr("data-lessname");
        var  arr=$("div.section");
        $.each(arr, function(i){
            var index=$(this).attr("data-pkcl");
            if(index==playpk){
                var old = i+1;
                if($(arr[old]).attr("data-pkcl")==null){
                    var url=$(arr[old-1]).attr("data-url");
                    var type=$(arr[old-1]).attr("data-type");
                    var plcl=$(arr[old-1]).attr("data-pkcl");
                    var pkcourse=$(arr[old-1]).attr("data-pkCourse");
                    var caption=$(arr[old-1]).attr("data-caption");
                    playCourse(url,type,plcl,pkcourse,caption);
                   // alert($(arr[old-1]).attr("data-pkcl"));//获得最后一条数据
                }else{
                    var url=$(arr[old]).attr("data-url");
                    var type=$(arr[old]).attr("data-type");
                    var plcl=$(arr[old]).attr("data-pkcl");
                    var pkcourse=$(arr[old]).attr("data-pkCourse");
                    var caption=$(arr[old]).attr("data-caption");
                    playCourse(url,type,plcl,pkcourse,caption);
                   // alert($(arr[old]).attr("data-pkcl"));//获得当前索引的上一条数据
                }
            }
         })
    })

